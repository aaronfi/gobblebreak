
<div class="container" id="topContainer">
    <div class="col-sm-2">
        <div class="inputs">
            <div class="input-group spinner">
                <span class="input-group-addon" id="size">Size</span>
                <input type="text" class="form-control" id="sizex" value="4">
                <div class="input-group-btn-vertical" id="sizex_spinner">
                    <button class="btn btn-default" type="button"><i class="fa fa-caret-up"></i></button>
                    <button class="btn btn-default" type="button"><i class="fa fa-caret-down"></i></button>
                </div>
                <span class="input-group-addon">by</span>
                <input type="text" class="form-control" id="sizey" value="4">
                <div class="input-group-btn-vertical" id="sizey_spinner">
                    <button class="btn btn-default" type="button"><i class="fa fa-caret-up"></i></button>
                    <button class="btn btn-default" type="button"><i class="fa fa-caret-down"></i></button>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-10">
        <div class="ui-content-widget ui-resizable" id="resizable">
            <div id="board" class="board"></div>
        </div>
    </div>
</div>

<script>
    $('#sizex_spinner .btn:first-of-type').on('click', function() {
        $('#sizex').val( parseInt($('#sizex').val(), 10) + 1);
        shuffleBoard();
    });
    $('#sizex_spinner .btn:last-of-type').on('click', function() {
        $('#sizex').val( Math.max(1, parseInt($('#sizex').val(), 10) - 1));
        shuffleBoard();
    });

    $('#sizey_spinner .btn:first-of-type').on('click', function() {
        $('#sizey').val( parseInt($('#sizey').val(), 10) + 1);
        shuffleBoard();
    });
    $('#sizey_spinner .btn:last-of-type').on('click', function() {
        $('#sizey').val( Math.max(1, parseInt($('#sizey').val(), 10) - 1));
        shuffleBoard();
    });

    var shuffleBoard = function() {
        game = new Foo({ x: $('#sizex').val(), y: $('#sizey').val() });
        $('#board').html(game.toHtml());
